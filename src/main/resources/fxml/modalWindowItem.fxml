<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" maxWidth="1000.0" minWidth="850.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="nameLabel" alignment="CENTER_RIGHT" text="Kostnad:" wrapText="true">
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="valueTextField" minWidth="50.0">
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <CheckBox fx:id="momsCheckBox" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" selected="true" text="Moms">
         <font>
            <Font size="20.0" />
         </font>
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
      </CheckBox>
      <TextArea fx:id="commentTextArea" maxHeight="50.0" maxWidth="250.0" minWidth="150.0" promptText="Kommentar">
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button mnemonicParsing="false" onAction="#openRemoveConfirmation" text="Ta bort kostnad">
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</HBox>
