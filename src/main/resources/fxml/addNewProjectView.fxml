<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="540.0" minWidth="960.0" stylesheets="@../css/Stylesheet.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane minHeight="170.0" onMouseClicked="#closeAddNewProjectView" styleClass="modal-window-shadow" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" maxHeight="250.0" minHeight="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Pane minWidth="330.0" onMouseClicked="#closeAddNewProjectView" styleClass="modal-window-shadow" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" maxWidth="400.0" minWidth="300.0" spacing="10.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="standard-text" text="Lägg till nytt projekt" />
                  <Label styleClass="standard-text" text="Projektnamn:">
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="projectNameTextField" maxHeight="35.0" maxWidth="200.0" minHeight="35.0" minWidth="100.0" styleClass="standard-text" />
                  <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button minWidth="100.0" mnemonicParsing="false" onAction="#addNewProject" text="Lägg till projekt">
                           <styleClass>
                              <String fx:value="standard-text" />
                              <String fx:value="approve-button" />
                           </styleClass></Button>
                        <Button minWidth="100.0" mnemonicParsing="false" onAction="#closeAddNewProjectView" text="Avbryt">
                           <styleClass>
                              <String fx:value="standard-text" />
                              <String fx:value="cancel-button" />
                           </styleClass></Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <Pane minWidth="330.0" onMouseClicked="#closeAddNewProjectView" styleClass="modal-window-shadow" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Pane minHeight="170.0" onMouseClicked="#closeAddNewProjectView" styleClass="modal-window-shadow" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
